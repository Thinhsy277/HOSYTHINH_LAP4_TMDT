<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_categories"
    android:gravity="center_vertical"
    android:minHeight="72dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_index_circle"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_story_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Bài học vỡ lòng" />

        <TextView
            android:id="@+id/tv_story_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/greenSuperLight"
            android:textSize="13sp"
            tools:text="Mẩu truyện về cô giáo vui nhộn..." />
    </LinearLayout>

</LinearLayout>

